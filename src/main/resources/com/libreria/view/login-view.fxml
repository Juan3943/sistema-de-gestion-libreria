            <Separator prefWidth="200"/>

            <Label text="Iniciar SesiÃ³n"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #34495e;">
                <VBox.margin>
                    <Insets top="10"/>
                </VBox.margin>
            </Label>
        </VBox>

        <!-- CAMPO: Usuario -->
        <VBox spacing="8">
            <Label text="Usuario:"
                   style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

            <!--
                TextField: Campo de texto normal
                fx:id="txtUsuario" permite acceder desde LoginController
                promptText es el texto "fantasma" que aparece cuando estÃ¡ vacÃ­o
            -->
            <TextField fx:id="txtUsuario"
                       promptText="Ingrese su nombre de usuario"
                       style="-fx-font-size: 14px; -fx-padding: 10;"
                       onAction="#handleLogin"/>
            <!-- onAction="#handleLogin" = al presionar ENTER, ejecuta handleLogin() -->
        </VBox>

        <!-- CAMPO: ContraseÃ±a CON BOTÃ“N OJO -->
        <VBox spacing="8">
            <Label text="ContraseÃ±a:"
                   style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

            <!-- Contenedor horizontal para campo + botÃ³n ojo -->
            <HBox spacing="5" alignment="CENTER_LEFT">
                <!-- StackPane: permite superponer PasswordField y TextField -->
                <StackPane HBox.hgrow="ALWAYS">
                    <PasswordField fx:id="txtPassword"
                                   promptText="Ingrese su contraseÃ±a"
                                   style="-fx-font-size: 14px; -fx-padding: 10;"
                                   onAction="#handleLogin"/>

                    <TextField fx:id="txtPasswordVisible"
                               promptText="Ingrese su contraseÃ±a"
                               style="-fx-font-size: 14px; -fx-padding: 10;"
                               onAction="#handleLogin"
