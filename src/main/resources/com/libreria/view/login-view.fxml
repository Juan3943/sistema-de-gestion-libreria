                               managed="false"/>
                </StackPane>

                <!-- BotÃ³n Ojo -->
                <Button fx:id="btnMostrarPassword"
                        text="ðŸ‘"
                        onAction="#handleTogglePassword"
                        style="-fx-cursor: hand; -fx-padding: 10 15; -fx-font-size: 14px;"/>
            </HBox>
        </VBox>

        <!-- LABEL DE ERROR -->
        <!--
            Este label estÃ¡ oculto por defecto (visible="false")
            El controller lo mostrarÃ¡ cuando haya error
        -->
        <Label fx:id="lblError"
               text="Usuario o contraseÃ±a incorrectos"
               style="-fx-text-fill: #e74c3c; -fx-font-size: 12px; -fx-font-weight: bold;"
               visible="false"
               wrapText="true"
               alignment="CENTER"/>

        <!-- BOTONES -->
        <HBox spacing="15" alignment="CENTER">
            <VBox.margin>
                <Insets top="10"/>
            </VBox.margin>

            <!-- BOTÃ“N: Iniciar SesiÃ³n -->
            <!--
                onAction="#handleLogin" ejecuta el mÃ©todo handleLogin() del controller
            -->
            <Button fx:id="btnLogin"
                    text="Iniciar SesiÃ³n"
                    onAction="#handleLogin"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 12 30; -fx-cursor: hand;"
                    defaultButton="true"/>
            <!-- defaultButton="true" = se activa al presionar ENTER -->

            <!-- BOTÃ“N: Cerrar AplicaciÃ³n -->
            <Button text="Cerrar"
                    onAction="#handleCerrar"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 12 30; -fx-cursor: hand;"/>
        </HBox>

    </VBox>

    <!-- PIE DE PÃGINA -->
    <Label text="v1.0 - Desarrollado para LibrerÃ­a Papelitos"
