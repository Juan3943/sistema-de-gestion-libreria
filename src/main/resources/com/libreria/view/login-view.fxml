<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.libreria.controller.LoginController"
      alignment="CENTER"
      spacing="20"
      prefWidth="600"
      prefHeight="500"
      style="-fx-background-color: #ecf0f1;">

    <!-- Padding alrededor de todo el contenido -->
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <!-- PANEL CENTRAL: Caja blanca con el formulario -->
    <VBox alignment="CENTER"
          spacing="25"
          style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2);"
          maxWidth="400">

        <padding>
            <Insets top="40" right="50" bottom="40" left="50"/>
        </padding>

        <!-- TÃTULO -->
        <VBox alignment="CENTER" spacing="8">
            <Label text="ðŸ“š LibrerÃ­a Papelitos"
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

            <Label text="Sistema de GestiÃ³n"
